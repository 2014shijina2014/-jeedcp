<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xmlns:amq="http://activemq.apache.org/schema/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd"
       default-lazy-init="true">

	<description>ActiveMQ Configuration</description>
	
    <!-- 加载配置属性文件 -->
	<context:property-placeholder ignore-unresolvable="true" location="classpath:application.properties" />


	<!-- =============================================== -->
	<!-- JMS Common, Define JMS connectionFactory       -->
	<!-- =============================================== -->
	<!-- Activemq connection factory -->
	<bean id="amqConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		<!-- brokerURL, You may have different IP or port -->
		<constructor-arg index="0" value="tcp://192.168.2.149:61616" />
        <property name="useAsyncSend" value="true"/>
        <property name="redeliveryPolicy" ref="activeMQRedeliveryPolicy" />
	</bean>

	<!-- Pooled Spring connection factory -->
	<bean id="connectionFactory"
		  class="org.springframework.jms.connection.CachingConnectionFactory">
		<constructor-arg ref="amqConnectionFactory" />
	</bean>

	<!-- ======================================================= -->
	<!-- JMS Send, define default destination and JmsTemplate    -->
	<!-- ======================================================= -->
	<!-- Default Destination Queue Definition -->
	<bean id="defaultDestination" class="org.apache.activemq.command.ActiveMQQueue">
		<!-- name of the queue -->
		<constructor-arg index="0" value="Send2Recv" />
	</bean>

	<!-- JmsTemplate Definition -->
	<bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
		<property name="connectionFactory" ref="connectionFactory" />
		<!--<property name="defaultDestination" ref="queueDestination" />-->
	</bean>

	<!-- JmsTemplate Definition -->
	<bean id="jmsTopicTemplate" class="org.springframework.jms.core.JmsTemplate">
		<property name="connectionFactory" ref="connectionFactory" />
		<property name="defaultDestination" ref="defaultDestination" />
		<property name="pubSubDomain" value="true"/>
	</bean>


	<!--这个是队列目的地，点对点的-->
	<!--<bean id="queueDestination" class="org.apache.activemq.command.ActiveMQQueue">-->
		<!--<constructor-arg>-->
			<!--<value>myQueue</value>-->
		<!--</constructor-arg>-->
	<!--</bean>-->
	<!--这个是主题目的地，一对多的-->
	<bean id="topicDestination" class="org.apache.activemq.command.ActiveMQTopic">
		<constructor-arg value="topic"/>
	</bean>
	<!--这个是主题目的地，一对多的-->
	<!--<bean id="queueAdvisoryDestination" class="org.apache.activemq.advisory.ConsumerEvent">-->
		<!--<constructor-arg value="ActiveMQ.Advisory.Consumer"/>-->
	<!--</bean>-->


	<!-- 消息监听器 -->
	<bean id="consumerMessageListener" class="com.jeedcp.modules.mq.ConsumerMessageListener"/>

	<!-- 消息监听容器 -->
	<bean id="jmsContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="connectionFactory" />
		<!--<property name="destination" ref="queueDestination" />-->
        <property name="destinationName" value="myQueue"/>
		<property name="messageListener" ref="consumerMessageListener" />
	</bean>


	<!-- 消息监听器 -->
	<bean id="consumerMessageListener2" class="com.jeedcp.modules.mq.ConsumerMessageListener2"/>

	<!-- 消息监听容器 -->
	<bean id="jmsContainer2" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="connectionFactory" />
        <!--<property name="destination" ref="queueDestination" />-->
        <property name="destinationName" value="myQueue"/>
		<property name="messageListener" ref="consumerMessageListener2" />
        <property name="concurrentConsumers" value="30"/>
	</bean>


    <!-- 消息监听器 -->
    <bean id="consumerMessageListener3" class="com.jeedcp.modules.mq.ConsumerMessageListener3"/>

    <!-- 消息监听容器 -->
    <bean id="jmsContainer3" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory" />
        <!--<property name="destination" ref="queueDestination" />-->
        <property name="destinationName" value="redeliveQueue"/>
        <property name="messageListener" ref="consumerMessageListener3" />
        <property name="sessionTransacted" value="true" />
    </bean>
    <amq:redeliveryPolicy id="activeMQRedeliveryPolicy" destination="#defaultDestination" redeliveryDelay="100" maximumRedeliveries="4" />

	<!--&lt;!&ndash; 消息监听器 &ndash;&gt;-->
	<!--<bean id="consumerMessageTopicListener" class="com.jeedcp.modules.mq.ConsumerTopicMessageListener"/>-->

	<!--&lt;!&ndash; 消息监听容器 &ndash;&gt;-->
	<!--<bean id="jmsTopicContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">-->
		<!--<property name="connectionFactory" ref="connectionFactory" />-->
		<!--<property name="destination" ref="topicDestination" />-->
		<!--<property name="messageListener" ref="consumerMessageTopicListener" />-->
	<!--</bean>-->

	<!-- 消息监听器 -->
	<bean id="consumerMessageTopicListener2" class="com.jeedcp.modules.mq.ConsumerTopicMessageListener2"/>

	<!-- 消息监听容器 -->
	<bean id="jmsTopicContainer2" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="connectionFactory" />
		<property name="destination" ref="topicDestination" />
		<property name="messageListener" ref="consumerMessageTopicListener2" />
	</bean>

	<!-- 消息监听器 -->
	<bean id="consumerMessageTopicListener3" class="com.jeedcp.modules.mq.ConsumerTopicMessageListener3"/>

	<!-- 消息监听容器 -->
	<bean id="jmsTopicContainer3" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="connectionFactory" />
		<property name="destination" ref="topicDestination" />
		<property name="messageListener" ref="consumerMessageTopicListener3" />
	</bean>


	<!-- 消息监听器 -->
	<bean id="consumerActiveMQAdvisoryConsumerQueueMessageListener1" class="com.jeedcp.modules.mq.ConsumerActiveMQAdvisoryConsumerQueueMessageListener1"/>

	<!-- 消息监听容器 -->
	<!--<bean id="jmsTopicContainer3" class="org.springframework.jms.listener.DefaultMessageListenerContainer">-->
	<!--<property name="connectionFactory" ref="connectionFactory" />-->
	<!--<property name="destination" ref="queueAdvisoryDestination" />-->
	<!--<property name="messageListener" ref="consumerActiveMQAdvisoryConsumerQueueMessageListener1" />-->
	<!--</bean>-->
</beans>